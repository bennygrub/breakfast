= form_for [@event, @participant], html: {class: "form-horizontal"} do |f|
  - if @participant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@participant.errors.count, "error")} prohibited this participant from being saved:"
      %ul
        - @participant.errors.full_messages.each do |msg|
          %li= msg

  .col-xs-12.col-sm-8
    .form-group
      =f.hidden_field :event_id, value: @event.id
      .col-sm-2.control-label
        = f.label :name
      .col-sm-10
        = f.text_field :name, class: "form-control"
    .form-group
      .col-sm-2.control-label
        = f.label :email
      .col-sm-10
        = f.text_field :email, class: "form-control"
    .form-group
      .col-sm-2.control-label
        = f.label :title
      .col-sm-10
        = f.text_field :title, class: "form-control"
    .form-group
      .col-sm-2.control-label
        = f.label :division
      .col-sm-10
        = f.text_field :division, class: "form-control"
    .form-group
      .col-sm-2.control-label
        = f.label :biography
      .col-sm-10
        = f.text_area :biography, class: "form-control"
    .form-group
      .pull-right
        = f.submit 'Save', class: "btn btn-info"
.clearfix