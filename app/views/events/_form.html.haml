= form_for @event, :html => {:class => "form-horizontal"} do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .col-xs-12.col-sm-8
    .form-horizontal
      .form-group
        .col-sm-2.control-label
          = f.label :name
        .col-sm-10
          = f.text_field :name, class: "form-control"
      .form-group
        .col-sm-2.control-label
          = f.label :description
        .col-sm-10
          = f.text_area :description, class: "form-control"
      .form-group
        .col-sm-2.control-label
          = f.label :venue
        .col-sm-10
          = f.text_area :venue, class: "form-control", placeholder: "Leaving blank will default to: 1515 Broadway-52nd Fl. Multi Media Room New York, NY, 10036"
      .form-group
        .col-sm-2.control-label
          = f.label "Event Date"
        .col-sm-10
          = f.text_field :event_date_date, class: "datepicker form-control"
      .form-group
        .col-sm-2.control-label
          = f.label "Event Time"
        .col-sm-2
          = f.select :event_date_hour, (1..12).map{|a| "%.2d" % a},{}, class: "form-control"
        .col-sm-2
          = f.select :event_date_min, ["%.2d" % 0, 15, 30, 45], {}, class: "form-control"
        .col-sm-2
          = f.select :event_date_time, ["am", "pm"],{}, class: "form-control"

      .form-group
        .col-sm-12
          .pull-right
            = f.submit 'Save', class: "btn btn-info"
.clearfix
:coffeescript
  $ ->
    $('.datepicker').datepicker 
      todayHighlight: true
      autoclose: true